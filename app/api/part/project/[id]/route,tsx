import { PrismaClient } from "@prisma/client";
import { NextResponse } from "next/server";

const prisma = new PrismaClient();

// GET - jedan projekat
export async function GET(
    req: Request,
    { params }: { params: { id: string } }
) {
    const id = Number(params.id);

    const project = await (prisma as any).project.findUnique({
        where: { id },
        include: {
            components: {
                include: { component: true }
            }
        }
    });

    return NextResponse.json(project);
}

// PUT - izmena naziva (ako zatreba i komponente, dodam)
export async function PUT(
    req: Request,
    { params }: { params: { id: string } }
) {
    const id = Number(params.id);
    const data = await req.json();

    const updated = await (prisma as any).project.update({
        where: { id },
        data: {
            naziv: data.naziv
        }
    });

    return NextResponse.json(updated);
}

// DELETE - vracanje komponenti + brisanje projekta
// Body: { components: [{ componentId, quantity }] }
export async function DELETE(
    req: Request,
    { params }: { params: { id: string } }
) {
    const id = Number(params.id);
    const data = await req.json();
    const { components } = data;

    // 1. Vrati komponente u lager
    for (const item of components) {
        await prisma.electronicComponent.update({
            where: { id: item.componentId },
            data: {
                count: { increment: item.quantity }
            }
        });
    }

    // 2. Obrisi sve veze iz ProjectComponent
    await (prisma as any).projectComponent.deleteMany({
        where: { projectId: id }
    });

    // 3. Obrisi projekat
    await (prisma as any).project.delete({
        where: { id }
    });

    return NextResponse.json({ message: "Project deleted and components returned." });
}
